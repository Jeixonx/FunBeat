<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fondoguitarra">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="redoblante"
        android:id="@+id/button"
        android:background="#00ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#00f7ff"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bombo"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true"
        android:background="#00ffffff"
        android:textColor="#00f7ff"
        android:layout_alignBottom="@+id/button"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#00f7ff"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:text="120"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#00f7ff"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="metronomo"
        android:id="@+id/button3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignStart="@+id/editText"
        android:foreground="@drawable/iconoidle"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView2"
        android:textColor="#00f7ff"
        android:layout_above="@+id/textView"
        android:layout_alignEnd="@+id/button2"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textColor="#ffbf00"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/textView2"
        android:textColor="#ffbf00"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/editText"
        android:textColor="#00f7ff"
        android:text="80"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buffer"
        android:id="@+id/button4"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button3"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView5"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"
        android:textColor="#00f7ff"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textViewX"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textColor="#00f7ff"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textViewY"
        android:layout_below="@+id/textViewX"
        android:layout_alignParentStart="true"
        android:textColor="#00f7ff"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar"
        android:id="@+id/button5"
        android:layout_above="@+id/textViewX"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuracion"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/textViewY"
        android:layout_toEndOf="@+id/button4" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgblue"
        android:layout_toStartOf="@+id/button6"
        android:layout_below="@+id/button"
        android:layout_above="@+id/button6"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imggreen"
        android:visibility="invisible"
        android:layout_above="@+id/textViewX"
        android:layout_alignEnd="@+id/button2" />

</RelativeLayout>
